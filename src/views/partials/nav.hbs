<script>
  document.addEventListener('DOMContentLoaded', () => {
    const links = document.querySelectorAll('nav .__a')
    links.forEach(item => {
      const paths = item.getAttribute('href').split('/')[2] || item.getAttribute('href').split('/')[1] || "home"

      console.log(paths)

      const currentPage = window.location.pathname.split('/')[2] || window.location.pathname.split('/')[1] || "home"

      if (paths.includes(currentPage)) {
        item.classList.add('nav--active', 'text-primary')

      } else {
        item.classList.remove('nav--active')
      }
    })
  })
</script>