      <div class='flex gap-12 justify-center mx-auto max-w-7xl flex-wrap mt-10'>
        {{#each projects}}
        <div class='mt-5 p-5 w-96 transition hover:shadow-lg'>
          <div class='w-full h-48'></div>
          <div class='flex flex-col gap-5'>
            <div class="cursor-pointer">

              <a href="">
                <h4 class='text-xl'>{{ this.name }}</h4>
                <p class='text-gray-500 text-sm'>durasi : {{countTime this.startDate this.endDate }}</p>
              </a>
            </div>
            <p class='text-sm'>
              {{ this.description }}
            </p>

            <div class='flex gap-3'>
              {{#each this.technologies }}
              <img src='./images/{{ this }}-checkbox.png' alt='{{ this }}' width='24px' />
              {{/each }}
            </div>

            <div class='flex flex-row gap-3 '>
              <a href="/project/edit/{{@index  }}"
                class='transition border hover:bg-orange-500 hover:text-white text-primary w-full py-0.5 font-semibold lowercase text-center'>Edit</a>
              <a href="/project/delete/{{@index  }}" onclick="return confirm('Are you sure to delete Project?')"
                class='transition border hover:bg-red-500 hover:text-white hover:border-red-700 border-primary text-primary w-full py-0.5 font-semibold lowercase text-center'>Delete</a>
            </div>
          </div>
        </div>
        {{/each }}

