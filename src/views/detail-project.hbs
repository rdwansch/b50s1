{{#> header }}
Detail Project
{{/header}}

<body class='bg-secondary font-[Bai Jamjuree]'>
  {{> nav }}

  {{log project }}

  <div id="content-container" class="p-10 max-w-7xl mx-auto pt-36 sm:pt-24 ">
    <h1 class="text-center text-3xl font-bold mb-20">{{ project.name }}</h1>

    <div class="flex gap-10 justify-between flex-wrap">
      <img src="/{{ project.image }}" alt="Image" class="w-[40rem] max-h-[23rem]" />

      <div class="w-fit">
        <div class="mb-8">
          <h3 class="text-xl font-semibold mb-4">Duration</h3>
          <div class="flex gap-2 items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="currentColor" viewBox="0 0 16 16">
              <path
                d="M14 0H2a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zM1 3.857C1 3.384 1.448 3 2 3h12c.552 0 1 .384 1 .857v10.286c0 .473-.448.857-1 .857H2c-.552 0-1-.384-1-.857V3.857z">
              </path>
              <path
                d="M6.5 7a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm-9 3a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm-9 3a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2z">
              </path>
            </svg>
            <span>{{ project.startDate }} - {{ project.endDate }}</span>
          </div>
          <div class="flex gap-2 items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="currentColor" viewBox="0 0 16 16">
              <path d="M8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71V3.5z"></path>
              <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm7-8A7 7 0 1 1 1 8a7 7 0 0 1 14 0z"></path>
            </svg>
            <span>{{countTime project.startDate project.endDate }}</span>
          </div>
        </div>

        <div>
          <h3 class="text-xl font-semibold mb-4">Technologies</h3>
          <div class="flex flex-wrap gap-4">
            {{log project.technologies }}
            {{#each project.technologies }}
            <img src='/images/{{ this }}-checkbox.png' alt='{{ this }}' width='24px' />
            {{/each }}
          </div>
        </div>
      </div>
    </div>

    <div class="mt-10">
      <p>
        {{project.description}}
      </p>
    </div>
    <div class="mt-10">
      <a href="/" class="text-primary underline border border-primary px-5 ">Back</a>
    </div>
  </div>

</body>